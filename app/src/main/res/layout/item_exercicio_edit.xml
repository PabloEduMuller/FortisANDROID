<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingHorizontal="8dp"
    android:paddingVertical="12dp">

    <LinearLayout
        android:id="@+id/ll_text_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ll_icon_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvExercicioNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Supino Reto com Barra"
            android:textColor="#2A3B55"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tvExercicioDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="4 séries x 12 repetições"
            android:textColor="#78909C"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_icon_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ibEditExercicio"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/button_dark_rounded"
            android:src="@drawable/ic_edit"
            android:padding="10dp"
            app:tint="#FFFFFF"
            android:contentDescription="Editar"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/ibDeleteExercicio"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/button_red_rounded"
            android:src="@drawable/ic_delete"
            android:padding="10dp"
            app:tint="#FFFFFF"
            android:contentDescription="Deletar"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#0D000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>